.page .camera {
  border-radius: 50%;
}

.page .camera .img {
  -webkit-box-shadow: 0 0 20px 15px #ffffff;
          box-shadow: 0 0 20px 15px #ffffff;
  height: 350rpx;
  width: 350rpx;
  z-index: -1;
  border-radius: 50%;
}

.page .text {
  margin: 30px 0;
  font-size: 24px;
  letter-spacing: 2px;
  color: red;
  font-weight: bold;
}

.page .btn {
  position: absolute;
  bottom: 100rpx;
  background-color: #fdd62f;
}
